<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.univamu.iut.s201_chess.ChessGameController">
    <HBox>
        <GridPane fx:id="chessBoard" minWidth="640" minHeight="640">
            <children>
                <Group fx:id="tileGroup"/>
                <Group fx:id="pieceGroup"/>
            </children>
        </GridPane>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
            <Label text="Jouez aux échecs en ligne sur le site n°1 !" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Button text="Jouez en local" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
            <Button text="Jouer contre l'ordinateur" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
        </VBox>
    </HBox>
</StackPane>